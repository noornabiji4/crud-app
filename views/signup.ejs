<% include ./partials/header.ejs %>

<!-- Default form register -->
<form class="Signup text-center border border-light p-5" action="/users/signup" method="POST">

        <p class="h4 mb-4">Sign up</p>
    
        <div class="form-row mb-4">
            <div class="col">
                <!-- First name -->
                <input type="text" id="username" name="username" class="form-control" placeholder="user name">
            </div>
        </div>
    
        <!-- E-mail -->
        <input type="email" id="mail" name="email" class="form-control mb-4" placeholder="E-mail">
    
        <!-- Password -->
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock">
        
    
     
    
        <!-- Sign up button -->
        <button class="btn btn-info my-4 btn-block submit" type="submit"><a> Sign in</a></button>
    
    </form>
    <!-- Default form register -->



