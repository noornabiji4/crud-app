<% include ./partials/header.ejs %>

<form class="text-center border border-light p-5" id="addProfile" action='/profile' method="POST">

    <p class="h4 mb-4">Add New profile</p>
    
    <div class="form-row mb-4">
        <div class="col">
            <input type="text" name="fullName" class="form-control" placeholder="Full Name">
        </div>
        <div class="col">
            <input type="text" name="emailId" class="form-control" placeholder="E-Mail Id">
        </div>
    </div>
    <div class="form-row mb-4">
        <div class="col">

            <input type="text" name="phoneNumber" class="form-control" placeholder="Phone Number">
        </div>
        <div class="col">

            <input type="text" name="address" class="form-control" placeholder="Address">
        </div>
    </div>

    <input type="text" name="image" class="form-control mb-4" placeholder="Image URL">
    <button class="btn btn-info my-4 btn-block" type="submit">Submit</button>

</form>

